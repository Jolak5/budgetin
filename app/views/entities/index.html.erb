<h1>Entities</h1>

<div id="entities">
  <% @entities.each do |entity| %>
         <p>
    <strong>Name:</strong>
    <%= entity.name %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= entity.author_id %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= entity.amount %>
  </p>

  <p>
    <strong>User:</strong>
    <%= entity.user_id %>
  </p>

  <p>
    <strong>Group:</strong>
    <%= entity.group_id %>
  </p>

    <p>
      <%= link_to "Show this entity", group_entity_path(@group, entity) %>
    </p>
  <% end %>
</div>

